generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id                 String @id @default(uuid())
  title              String @unique 
  coverImageUrl      String
  description        String
  Year               Int
  imdbScrore         Float
  trailerYouTubeUrl  String
  gameplayYouTubeUrl String


  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  genders Gender[]
  profiles Profile[]

  @@map("game")
}

model User {
  id String @id @default(uuid())

  name     String
  email    String 
  password String
  cpf      Int    @unique
  isAdmin  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profiles Profile[]

  @@map("user")
}

model Profile {
  id String @id @default(uuid())

  title    String
  imageUrl String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  games Game[]

  @@map("profile")
}

model Gender {
  id String @id @default(uuid())

  name String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  games Game[]

  @@map("gender")
}

